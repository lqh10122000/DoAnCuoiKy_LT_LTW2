                                <option>Đang công chiếu</option>
                                <option>Sắp công chiếu</option>
                              </select>
                            </div>
                          </div> -->
                          <!-- ------- -->
                        </div>
                        <div class="modal-footer">
                          <button type="submit" class="btn btn-primary">
                            Cập Nhật
                          </button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
                <a class="btn btn-danger thaotac" href="/admin/movie/delete/?id=<%- movies[i].id %>">Xóa</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
