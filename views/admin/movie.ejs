                      </div>
                    </div> -->
                    <!-- ------- -->
                  </div>
                  <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Đăng</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <table class="table">
          <thead class="text-center">
            <tr>
              <th scope="col">Mã số</th>
              <th scope="col">Hình ảnh</th>
              <th scope="col">Tên</th>
              <th scope="col">Thời lượng</th>
              <th scope="col">Trạng thái</th>
              <th scope="col">Ngày công chiếu</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody class="text-center">
            <% for(let i = 0; i < movies.length; i++) { %>

            <tr>
              <td><%- movies[i].id %></td>
              <td>
                <img
                  src="/movie/picturePoster/<%- movies[i].id %>"
                  alt=""
                  style="width: 50px"
                />
              </td>
              <td><%- movies[i].name %></td>
              <td><%- movies[i].time %></td>
              <td>Đang công chiếu</td>
              <td><%- movies[i].premiereDate %></td>
              <td>
                <button
                  class="btn btn-success thaotac"
                  data-toggle="modal"
                  data-target="#Sua<%- movies[i].id %>"
                >
                  Sửa
                </button>
                <div
                  class="modal fade"
                  id="Sua<%- movies[i].id %>"
                  tabindex="-1"
                  aria-labelledby="Sua"
                  aria-hidden="true"
                >
                  <div class="modal-dialog modal-lg">
                    <form method="post" enctype="multipart/form-data" action='/admin/movie/update/?id=<%- movies[i].id %>'>
                      <div class="modal-content">
                        <div class="modal-header">
                          <h3>Cập Nhật Thông Tin</h3>
                          <button
                            type="button"
                            class="close"
                            data-dismiss="modal"
                            aria-label="Close"
                          >
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body text-left">
                          <!-- Form thêm thong tin -->

                          <div class="form-group row">
                            <label class="col-sm-2 col-form-label"
                              >Tên Phim</label
                            >
                            <div class="col-sm-10">
                              <input name="nameMovie" class="form-control" value="<%- movies[i].name %>"/>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-2 col-form-label"
                              >Thời Lượng</label
                            >
                            <div class="col-sm-10">
                              <input
                                class="form-control"
                                type="number"
                                name="timeMovie"
                                value="<%- movies[i].time %>"
                              />
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-2 col-form-label"
                              >Trailer</label
                            >
                            <div class="col-sm-10">
                              <input name="trailerMovie" class="form-control" value="<%- movies[i].trailer %>"/>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-2 col-form-label"
                              >Nội Dung</label
                            >
                            <div class="col-sm-10">
                              <input name="content" class="form-control" value="<%- movies[i].content %>"/>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-2 col-form-label"
                              >Hình Ảnh</label
                            >
                            <div class="col-sm-10">
                              <input type="file" 
                              class="form-control-file" 
                              id="picture"
                              name="picture"/>
                            </div>
                          </div>
                          <div class="form-group row">
                            <label class="col-sm-2 col-form-label"
                              >Ngày Công Chiếu</label
                            >
                            <div class="col-sm-10">
                              <input
                                type="date"
                                class="form-control"
                                name="premiereDate"
                                value="<%- movies[i].premiereDate %>"
                              />
                            </div>
                          </div>

                          <!-- <div class="form-group row">
                            <label class="col-sm-2 col-form-label"
                              >Trạng Thái Phim</label
                            >
                            <div class="col-sm-10">
