<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>
<body>
    
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
              <a class="navbar-brand" href="/">Lập trình Web 2</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item">
                    <a class="nav-link <%- title === 'Trang chủ' ? 'active': '' %> " aria-current="page" href="/">Trang chủ</a>
                  </li>
                  
                  <% if(currentUser){ %>                  
                    <li class="nav-item">
                      <a class="nav-link <%- title === 'Đổi mật khẩu' ? 'active': '' %> " href="/auth/changePassword">Đổi mật khẩu</a>
                    </li> 
                    <li class="nav-item">
                      <a class="nav-link <%- title === 'Quên mật khẩu' ? 'active': '' %> " href="/auth/forgotPassword">Quên mật khẩu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">Đăng xuất</a>
                    </li>                    
                    <li class="nav-item">
                        <a class="nav-link <%- title === 'Thông tin cá nhân' ? 'active': '' %> " href="/user/profile"><%- currentUser.displayName %></a>
                    </li>
                  <% } else{%>                       
                    <li class="nav-item">
                        <a class="nav-link <%- title === 'Đăng nhập' ? 'active': '' %> " href="/auth/login">Đăng nhập</a>
                    </li>       
                    <li class="nav-item">
                      <a class="nav-link <%- title === 'Đăng kí tài khoản' ? 'active': '' %> " href="/auth/signup">Đăng kí tài khoản</a>
                    </li>  
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true"><%- currentUser?currentUser.displayName: 'Khách' %></a>
                    </li>
                    <% } %>                                                            
              </div>
            </div>
        </nav>
        <h1><%- title %></h1>
        <%- body %>
    </div>
</body>
</html>